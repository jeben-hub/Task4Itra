<!DOCTYPE html>
<html>
  <head>
    <title>Progect</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <% if current_user %>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h5 class="my-0 mr-md-auto font-weight-normal">Iransition Task 4</h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <span><%= "You login as " + current_user.name %></span>
      </nav>
      <%= link_to 'Log Out', log_out_url,:class => 'btn btn-btn btn-primary btn-xs', method: :delete %>
    </div>
    <% end %>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
